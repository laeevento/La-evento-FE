{
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "build:styles"],
      "outputs": ["dist/**"]
    },
    "build:css": {
      "outputs": ["dist/**"]
    },
    "build:components": {
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:css": {
      "cache": false,
      "persistent": true
    },
    "dev:js": {
      "cache": false,
      "persistent": true
    }
  }
}
